/* pages/index/index.wxss */
.weui-flex{-webkit-box-align:center;-webkit-align-items:center;align-items:center}
.weui-cells{margin-top:0;opacity:0;-webkit-transform:translateY(-50%);transform:translateY(-50%);-webkit-transition:.3s;transition:.3s}
.weui-cells:after,.weui-cells:before
{display:none}
.weui-cells_show{opacity:1;-webkit-transform:translateY(0);transform:translateY(0)}
.weui-cell:before{right:15px}
.kind-list__item{margin:60rpx 0;background-color:deepskyblue;border-radius:30rpx;}
.weui-flex__item{font-size: 17px; font-weight:bolder}
.kind-list__item:first-child{margin-top:0}
.kind-list__img{width:30px;height:30px; margin-left: 550rpx;}
.kind-list__img1{width:30px;height:30px;margin-left: 10rpx;}
.kind-list__item-hd{padding:20px;}
.kind-list__item-hd_show{opacity:.4}
.kind-list__item-bd{height:0;overflow:hidden}
.kind-list__item-bd_show{height:auto}